{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "TJPDF Extraction Output",
  "type": "object",
  "required": [
    "meta",
    "documents"
  ],
  "additionalProperties": false,
  "properties": {
    "meta": {
      "type": "object",
      "required": [
        "version",
        "generated_at",
        "source"
      ],
      "additionalProperties": true,
      "properties": {
        "version": {
          "type": "string"
        },
        "generated_at": {
          "type": "string"
        },
        "source": {
          "type": "object",
          "required": [
            "filename",
            "num_pages"
          ],
          "additionalProperties": true,
          "properties": {
            "filename": {
              "type": "string"
            },
            "num_pages": {
              "type": "integer",
              "minimum": 0
            },
            "sha256": {
              "type": "string"
            }
          }
        }
      }
    },
    "documents": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/$defs/DocumentResult"
      }
    }
  },
  "$defs": {
    "DocumentResult": {
      "type": "object",
      "required": [
        "doc_type",
        "pages",
        "confidence",
        "final_fields",
        "field_results"
      ],
      "additionalProperties": false,
      "properties": {
        "doc_type": {
          "type": "string"
        },
        "pages": {
          "type": "array",
          "items": {
            "type": "integer",
            "minimum": 1
          }
        },
        "confidence": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "final_fields": {
          "$ref": "#/$defs/FinalFields"
        },
        "field_results": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/FieldResult"
          }
        },
        "errors": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "evidences": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/Evidence"
          }
        }
      }
    },
    "Evidence": {
      "type": "object",
      "required": [
        "kind",
        "detail"
      ],
      "additionalProperties": true,
      "properties": {
        "kind": {
          "type": "string"
        },
        "detail": {
          "type": "string"
        },
        "page_num": {
          "type": "integer",
          "minimum": 1
        }
      }
    },
    "FieldResult": {
      "type": "object",
      "required": [
        "name",
        "value",
        "confidence",
        "method"
      ],
      "additionalProperties": true,
      "properties": {
        "name": {
          "type": "string"
        },
        "value": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "number"
            },
            {
              "type": "null"
            }
          ]
        },
        "confidence": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "method": {
          "type": "string"
        },
        "page_num": {
          "type": "integer",
          "minimum": 1
        },
        "snippet": {
          "type": "string"
        },
        "raw_match": {
          "type": "string"
        }
      }
    },
    "FinalFields": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "PROCESSO_ADMINISTRATIVO": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ]
        },
        "PROCESSO_JUDICIAL": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ]
        },
        "COMARCA": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ]
        },
        "VARA": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ]
        },
        "PROMOVENTE": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ]
        },
        "PROMOVIDO": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ]
        },
        "PERITO": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ]
        },
        "CPF_PERITO": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ]
        },
        "ESPECIALIDADE": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ]
        },
        "ESPECIE_DA_PERICIA": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ]
        },
        "VALOR_ARBITRADO_JZ": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "number"
            },
            {
              "type": "null"
            }
          ]
        },
        "VALOR_ARBITRADO_DE": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "number"
            },
            {
              "type": "null"
            }
          ]
        },
        "VALOR_ARBITRADO_CM": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "number"
            },
            {
              "type": "null"
            }
          ]
        },
        "VALOR_ARBITRADO_FINAL": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "number"
            },
            {
              "type": "null"
            }
          ]
        },
        "DATA_ARBITRADO_FINAL": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ]
        },
        "DATA_REQUISICAO": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ]
        },
        "ADIANTAMENTO": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "number"
            },
            {
              "type": "null"
            }
          ]
        },
        "PERCENTUAL": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "number"
            },
            {
              "type": "null"
            }
          ]
        },
        "PARCELA": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "number"
            },
            {
              "type": "null"
            }
          ]
        },
        "FATOR": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "number"
            },
            {
              "type": "null"
            }
          ]
        }
      }
    }
  }
}